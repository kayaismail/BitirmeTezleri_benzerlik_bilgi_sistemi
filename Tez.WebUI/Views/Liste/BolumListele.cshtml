@model Tez.WebUI.Models.BolumListele

@{
    ViewBag.Title = "BolumListele";
}
<link rel="stylesheet" type="text/css" href="~/Content/Tablo.css">
<h2>BolumListele</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>dbBolum</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.dbFakultes, "Danisman : ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" id="SecilenFakulteId" name="SecilenFakulteId">
                    @foreach (var item in Model.dbFakultes)
                    {
                        <option value="@item.Id">@item.FakulteAd</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.dbFakultes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@if (Model.SecilenFakulteId != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.bolumler)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.bolumler)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BolumAd)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

}


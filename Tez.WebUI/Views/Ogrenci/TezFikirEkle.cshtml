@model Tez.WebUI.Models.TezFikirDanisman
@{
        ViewBag.Title = "TezFikirEkle";
}

    <h2>Tez Fikri Gönder</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="jumbotron">
    <div class="form-horizontal">
        <h4>Tez Fikri Gönder</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.dbDanismen, "Danisman : ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" id="SecilenDanismanId" name="SecilenDanismanId">
                    @foreach (var item in Model.dbDanismen)
                    {
                        <option value="@item.Id">@item.DanismanAd</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.dbDanismen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tezFikir.FikirAd, "Fikir Ad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tezFikir.FikirAd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tezFikir.FikirAd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tezFikir.FikirIcerik, "Fikir Icerigi :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tezFikir.FikirIcerik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tezFikir.FikirIcerik, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>
}

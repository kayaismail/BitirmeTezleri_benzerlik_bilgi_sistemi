@model Tez.WebUI.Models.BolumFakulte

@{
    ViewBag.Title = "BolumEkle";
}

<h2>Bölüm Ekle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="jumbotron">
        <div class="form-horizontal">
            <h4>Bölüm Ekle</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.dbBolum.BolumAd, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.dbBolum.BolumAd, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.dbBolum.BolumAd, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.dbFakultes, "Fakulte : ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="form-control" id="SecilenFakulteId" name="SecilenFakulteId">
                        @foreach (var item in Model.dbFakultes)
                        {
                            <option value="@item.Id">@item.FakulteAd</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(model => model.dbFakultes, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
       
  }

  